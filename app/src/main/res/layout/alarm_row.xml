<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="false">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/ar_days"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                app:srcCompat="@drawable/demo" />

            <TextView
                android:id="@+id/ar_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ar_time"
                android:layout_alignLeft="@+id/ar_label"
                android:layout_alignStart="@+id/ar_label"
                android:text="TextView"
                android:textColor="#FA3C2F"
                tools:text="M Tu W Th F Sa Su" />

            <TextView
                android:id="@+id/ar_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ar_days"
                android:layout_marginLeft="49dp"
                android:layout_marginStart="49dp"
                android:layout_toEndOf="@+id/ar_am_pm"
                android:layout_toRightOf="@+id/ar_am_pm"
                android:textStyle="bold"
                tools:text="Peracitamol" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/ar_days"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/ar_days"
                android:layout_toStartOf="@+id/ar_days"
                app:srcCompat="@drawable/bot" />

            <TextView
                android:id="@+id/ar_am_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ar_time"
                android:layout_alignBottom="@+id/ar_time"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@+id/ar_time"
                android:layout_toRightOf="@+id/ar_time"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="AM" />

            <TextView
                android:id="@+id/ar_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:gravity="start|bottom"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="7:00" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>