<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardView3"
                android:layout_alignStart="@+id/cardView3"
                android:layout_below="@+id/cardView3"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingTop="12dp"
                android:text="@string/schedule_string"
                android:textColor="#F44336"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardView2"
                android:layout_alignStart="@+id/cardView2"
                android:layout_below="@+id/cardView2"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingTop="12dp"
                android:text="@string/type_of_med_string"
                android:textColor="#F44336"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardView2"
                android:layout_alignStart="@+id/cardView2"
                android:layout_below="@+id/edit_alarm_time_picker"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingTop="5dp"
                android:text="@string/med_take_days"
                android:textColor="#F44336"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardView"
                android:layout_alignStart="@+id/cardView"
                android:layout_below="@+id/cardView"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingTop="15dp"
                android:text="@string/med_take"
                android:textColor="#F44336"
                android:textSize="17sp" />

            <TimePicker
                android:id="@+id/edit_alarm_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_alignEnd="@+id/cardView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignRight="@+id/cardView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:timePickerMode="spinner"
                tools:targetApi="lollipop" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="?selectableItemBackground"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageViewt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/schtwo" />

                    <Spinner
                        android:id="@+id/description"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="50dp"
                        android:textAlignment="center"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_alarm_time_picker"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="41dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                app:cardBackgroundColor="@color/cardview_light_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/checkBoxSelectAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_alarm_tues"
                        android:layout_alignBottom="@+id/edit_alarm_tues"
                        android:layout_alignLeft="@+id/textView9"
                        android:layout_alignStart="@+id/textView9"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:fontFamily="sans-serif-condensed"
                        android:padding="10dp"
                        android:text="@string/select_all"
                        android:textColor="#FA3C2F"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/edit_alarm_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView9"
                        android:layout_alignBottom="@+id/textView9"
                        android:layout_alignLeft="@+id/edit_alarm_thurs"
                        android:layout_alignStart="@+id/edit_alarm_thurs" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_alarm_mon"
                        android:layout_alignBottom="@+id/edit_alarm_mon"
                        android:layout_alignLeft="@+id/textView8"
                        android:layout_alignStart="@+id/textView8"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/friday"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/edit_alarm_thurs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView8"
                        android:layout_alignBottom="@+id/textView8"
                        android:layout_alignLeft="@+id/edit_alarm_wed"
                        android:layout_alignStart="@+id/edit_alarm_wed" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_alarm_sun"
                        android:layout_alignBottom="@+id/edit_alarm_sun"
                        android:layout_alignLeft="@+id/textView7"
                        android:layout_alignStart="@+id/textView7"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/thursday"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/edit_alarm_wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView7"
                        android:layout_alignBottom="@+id/textView7"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="13dp"
                        android:layout_marginRight="13dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_alarm_sat"
                        android:layout_alignBottom="@+id/edit_alarm_sat"
                        android:layout_marginLeft="57dp"
                        android:layout_marginStart="57dp"
                        android:layout_toEndOf="@+id/edit_alarm_sat"
                        android:layout_toRightOf="@+id/edit_alarm_sat"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/wednesday"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/edit_alarm_tues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView6"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_alignLeft="@+id/edit_alarm_mon"
                        android:layout_alignStart="@+id/edit_alarm_mon" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_below="@+id/edit_alarm_mon"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/tuesday"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/edit_alarm_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView5"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_alignLeft="@+id/edit_alarm_sun"
                        android:layout_alignStart="@+id/edit_alarm_sun" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView4"
                        android:layout_alignStart="@+id/textView4"
                        android:layout_below="@+id/edit_alarm_sun"
                        android:layout_marginTop="11dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/monday"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/edit_alarm_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView4"
                        android:layout_alignBottom="@+id/textView4"
                        android:layout_alignLeft="@+id/edit_alarm_sat"
                        android:layout_alignStart="@+id/edit_alarm_sat" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_below="@+id/edit_alarm_sat"
                        android:layout_marginTop="11dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/sunday"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/edit_alarm_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView3"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_marginLeft="31dp"
                        android:layout_marginStart="31dp"
                        android:layout_toEndOf="@+id/textView3"
                        android:layout_toRightOf="@+id/textView3" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/saturday"
                        android:textSize="15sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView12"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                app:cardBackgroundColor="@color/cardview_light_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/bot" />

                    <Spinner
                        android:id="@+id/medType"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="50dp"
                        android:textAlignment="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/cardview_light_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edit_alarm_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="13dp"
                        android:layout_toEndOf="@+id/imageView"
                        android:layout_toRightOf="@+id/imageView"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/medicine_name"
                        android:inputType="textPersonName"
                        android:windowSoftInputMode="stateAlwaysHidden" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_marginStart="17dp"
                        app:srcCompat="@drawable/pill" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
